#!/usr/bin/env bash

# Verify Git is installed:
if [ ! $(which git) ]; then
  echo "Git is not installed."
  exit
fi

export RBENV_ROOT="$OPENSHIFT_DATA_DIR/.rbenv"

# Install rbenv:
if [ ! -d "$RBENV_ROOT" ] ; then
  git clone git://github.com/sstephenson/rbenv.git $RBENV_ROOT
else
  pushd $RBENV_ROOT > /dev/null
    echo "Pulling rbenv updates."
    git pull
  popd > /dev/null
fi

# Install plugins:
PLUGINS=( "sstephenson:rbenv-vars"
          "sstephenson:ruby-build"
          "asartalo:openshift-rbenv-installer" )

for plugin in ${PLUGINS[@]} ; do

  KEY=${plugin%%:*}
  VALUE=${plugin#*:}

  export RBENV_PLUGIN_ROOT="${RBENV_ROOT}/plugins/$VALUE"
  if [ ! -d "$RBENV_PLUGIN_ROOT" ] ; then
    git clone git://github.com/$KEY/$VALUE.git $RBENV_PLUGIN_ROOT
  else
    pushd $RBENV_PLUGIN_ROOT > /dev/null
      echo "Pulling $VALUE updates."
      git pull
    popd > /dev/null
  fi

done

export PATH=$RBENV_ROOT/bin:$PATH

# Show help if `.rbenv` is not in the path:
if [ ! $(which rbenv) ]; then
  echo "
Seems you still have not added 'rbenv' to the load path:

if [ -d \$HOME/.rbenv ]; then
  export PATH=\"\$HOME/.rbenv/bin:\$PATH\"
  eval \"\$(rbenv init -)\"
fi
"
fi
